<div class="cart-page" id="cart-section" data-section-id="{{ section.id }}">
  {% if cart.item_count == 0 %}
    <div class="cart-empty container container--narrow text-center pt-3xl pb-3xl">
      <h1 class="glow--strong mb-lg">[ CART EMPTY ]</h1>
      <p class="mb-xl" style="color: var(--color-text-muted); font-size: var(--font-size-sm);">
        > No items loaded into memory_
      </p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
        Continue Shopping
      </a>
    </div>
  {% else %}
    <div class="container pt-xl pb-3xl">
      <h1 class="glow mb-xl">// CART <span style="color: var(--color-text-muted); font-size: var(--font-size-lg);">[{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}]</span></h1>

      <form action="{{ routes.cart_url }}" method="post" id="cart-form">
        <div class="cart-items">
          {% for item in cart.items %}
            <div class="cart-item" data-line-key="{{ item.key }}" data-line-index="{{ forloop.index }}">
              <div class="cart-item__image">
                {% if item.image %}
                  <a href="{{ item.url }}" aria-label="{{ item.title | escape }}">
                    <img
                      src="{{ item.image | image_url: width: 200 }}"
                      alt="{{ item.image.alt | escape }}"
                      width="100"
                      height="100"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="cart-item__no-image">
                    <span style="font-family: var(--font-heading); color: var(--color-text-muted);">NO_IMG</span>
                  </div>
                {% endif %}
              </div>

              <div class="cart-item__details">
                <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-item__variant">{{ item.variant.title }}</p>
                {% endunless %}
                {% if item.selling_plan_allocation %}
                  <p class="cart-item__variant">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                {% endif %}
              </div>

              <div class="cart-item__price" data-cart-item-price>
                {{ item.original_price | money }}
              </div>

              <div class="cart-item__quantity">
                <label for="quantity-{{ forloop.index }}" class="visually-hidden">
                  Quantity for {{ item.title | escape }}
                </label>
                <div class="quantity-selector">
                  <button
                    type="button"
                    class="quantity-selector__btn"
                    data-quantity-minus
                    data-line-key="{{ item.key }}"
                    aria-label="Decrease quantity for {{ item.title | escape }}"
                  >&#8722;</button>
                  <input
                    type="number"
                    id="quantity-{{ forloop.index }}"
                    class="quantity-selector__input form-input"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="0"
                    max="99"
                    data-quantity-input
                    data-line-key="{{ item.key }}"
                    aria-label="Quantity for {{ item.title | escape }}"
                  >
                  <button
                    type="button"
                    class="quantity-selector__btn"
                    data-quantity-plus
                    data-line-key="{{ item.key }}"
                    aria-label="Increase quantity for {{ item.title | escape }}"
                  >+</button>
                </div>
              </div>

              <div class="cart-item__total" data-cart-item-total>
                {{ item.final_line_price | money }}
              </div>

              <button
                type="button"
                class="cart-item__remove btn btn--ghost btn--small"
                data-remove-item
                data-line-key="{{ item.key }}"
                aria-label="Remove {{ item.title | escape }} from cart"
              >
                [DEL]
              </button>
            </div>
          {% endfor %}
        </div>

        {% if section.settings.enable_cart_note %}
          <div class="cart-note mt-xl">
            <label for="cart-note" class="form-label">> Order Note_</label>
            <textarea
              id="cart-note"
              name="note"
              class="form-textarea"
              placeholder="Special instructions..."
              rows="3"
            >{{ cart.note }}</textarea>
          </div>
        {% endif %}

        <div class="cart-footer mt-xl">
          <div class="cart-totals">
            <div class="cart-totals__row cart-totals__subtotal">
              <span class="cart-totals__label">SUBTOTAL</span>
              <span class="cart-totals__value glow" data-cart-subtotal>{{ cart.total_price | money }}</span>
            </div>
            <p class="cart-totals__note">
              Taxes and shipping calculated at checkout
            </p>
          </div>
          <div class="cart-checkout mt-lg">
            <button type="submit" name="checkout" class="btn btn--primary btn--large btn--block">
              [ CHECKOUT ]
            </button>
          </div>
        </div>
      </form>
    </div>
  {% endif %}
</div>

<style>
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .cart-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    grid-template-rows: auto auto;
    gap: var(--space-sm) var(--space-md);
    padding: var(--space-md);
    background: var(--color-panel);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    align-items: center;
    transition: border-color var(--transition-base);
  }

  .cart-item:hover {
    border-color: var(--color-accent-glow);
  }

  .cart-item__image {
    grid-row: 1 / -1;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: var(--radius);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
  }

  .cart-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__no-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
  }

  .cart-item__details {
    min-width: 0;
  }

  .cart-item__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--color-accent);
    text-decoration: none;
    display: block;
    line-height: 1.2;
  }

  .cart-item__title:hover {
    text-shadow: 0 0 5px var(--color-accent-glow);
  }

  .cart-item__variant {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }

  .cart-item__price {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-align: right;
  }

  .cart-item__total {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    color: var(--color-accent);
    text-align: right;
  }

  .cart-item__remove {
    font-family: var(--font-heading);
    font-size: var(--font-size-xs);
    letter-spacing: 0.05em;
  }

  /* Quantity selector */
  .quantity-selector {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .quantity-selector__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    color: var(--color-accent);
    background: var(--color-panel);
    border: none;
    cursor: pointer;
    transition: background var(--transition-fast);
  }

  .quantity-selector__btn:hover {
    background: var(--color-accent-dim);
  }

  .quantity-selector__input {
    width: 48px;
    height: 32px;
    text-align: center;
    font-size: var(--font-size-sm);
    border: none;
    border-left: 1px solid var(--color-border);
    border-right: 1px solid var(--color-border);
    border-radius: 0;
    padding: 0;
    background: var(--color-bg);
    -moz-appearance: textfield;
  }

  .quantity-selector__input::-webkit-outer-spin-button,
  .quantity-selector__input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  /* Cart footer / totals */
  .cart-footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .cart-totals {
    text-align: right;
  }

  .cart-totals__row {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-xl);
    align-items: baseline;
  }

  .cart-totals__label {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-text);
  }

  .cart-totals__value {
    font-family: var(--font-heading);
    font-size: var(--h3);
    color: var(--color-accent);
  }

  .cart-totals__note {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }

  .cart-checkout {
    max-width: 400px;
    margin-left: auto;
  }

  /* Cart note */
  .cart-note .form-textarea {
    max-width: 500px;
  }

  /* Desktop grid for cart items */
  @media (min-width: 768px) {
    .cart-item {
      grid-template-columns: 100px 1fr auto auto auto auto;
      grid-template-rows: 1fr;
      gap: var(--space-md);
    }

    .cart-item__image {
      width: 100px;
      height: 100px;
      grid-row: auto;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .cart-item {
      grid-template-columns: 70px 1fr;
      gap: var(--space-xs) var(--space-sm);
      padding: var(--space-sm);
    }

    .cart-item__image {
      width: 70px;
      height: 70px;
    }

    .cart-item__price,
    .cart-item__quantity,
    .cart-item__total,
    .cart-item__remove {
      grid-column: 2;
    }

    .cart-totals__value {
      font-size: var(--h4);
    }
  }
</style>

{% schema %}
{
  "name": "Cart template",
  "tag": "section",
  "class": "section-cart",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_cart_note",
      "label": "Enable cart note",
      "default": false
    }
  ]
}
{% endschema %}

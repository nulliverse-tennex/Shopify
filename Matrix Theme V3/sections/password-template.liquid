<div class="password-page">
  <div class="container container--narrow">
    <div class="password-content text-center pt-3xl pb-3xl">

      <h1 class="password-content__store-name glow--strong">{{ shop.name }}</h1>

      <div class="password-content__message mt-xl">
        <p class="password-content__heading">> ACCESS_RESTRICTED_</p>
        <p class="password-content__subtext mt-sm">This store is currently locked. Enter the password to continue.</p>
      </div>

      <div class="password-content__form mt-2xl">
        {%- form 'storefront_password' -%}

          {%- if form.errors -%}
            <div class="password-form__error mb-md" role="alert">
              <p class="password-form__error-text">> ERROR: INVALID_PASSWORD_</p>
            </div>
          {%- endif -%}

          <div class="form-group">
            <label class="form-label" for="password-field">Password</label>
            <input
              type="password"
              id="password-field"
              class="form-input{% if form.errors %} form-input--error{% endif %}"
              name="password"
              placeholder="> enter_password"
              autofocus
            >
          </div>

          <button type="submit" class="btn btn--primary btn--large btn--block">
            ENTER >
          </button>

        {%- endform -%}
      </div>

      {%- if shop.password_message != blank -%}
        <div class="password-content__owner-message mt-2xl">
          <div class="password-owner-msg">
            {{ shop.password_message }}
          </div>
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
  }

  .password-content {
    max-width: 420px;
    margin: 0 auto;
  }

  .password-content__store-name {
    font-family: var(--font-heading);
    font-size: var(--h1);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1;
    margin: 0;
  }

  .password-content__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-2xl);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    text-shadow: 0 0 5px var(--color-accent-glow);
    margin: 0;
  }

  .password-content__subtext {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .password-form__error {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--color-error);
    border-radius: var(--radius);
    background: rgba(255, 68, 68, 0.05);
  }

  .password-form__error-text {
    font-family: var(--font-heading);
    font-size: var(--font-size-md);
    color: var(--color-error);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: 0;
  }

  .password-owner-msg {
    padding: var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-panel);
    color: var(--color-text);
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }
</style>

{% schema %}
{
  "name": "Password template",
  "tag": "section",
  "class": "password-template-section",
  "settings": []
}
{% endschema %}

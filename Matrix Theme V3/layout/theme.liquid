<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" style="background-color: #000">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0">

    <title>
      {%- if page_title -%}
        {{ page_title }}
        {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
        {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
        {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
      {%- else -%}
        {{ shop.name }}
      {%- endif -%}
    </title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- comment -%} Font preloads {%- endcomment -%}
    <link rel="preload" as="font" href="{{ 'fira-code-regular.woff2' | asset_url }}" type="font/woff2" crossorigin>
    <link rel="preload" as="font" href="{{ 'vt323-regular.woff2' | asset_url }}" type="font/woff2" crossorigin>

    <style>
      @font-face {
        font-family: 'Fira Code';
        src: url('{{ 'fira-code-regular.woff2' | asset_url }}') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Fira Code';
        src: url('{{ 'fira-code-medium.woff2' | asset_url }}') format('woff2');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Fira Code';
        src: url('{{ 'fira-code-bold.woff2' | asset_url }}') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'VT323';
        src: url('{{ 'vt323-regular.woff2' | asset_url }}') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
    </style>

    {{ 'theme.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}
  </head>

  <body class="{% if settings.enable_matrix_rain %}rain-enabled {% endif %}{% if settings.enable_scanlines %}scanlines-enabled{% endif %}">
    <a href="#main-content" class="skip-to-content visually-hidden">
      {{ 'accessibility.skip_to_content' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="main-content" role="main">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <script>window.Shopify = window.Shopify || {}; window.Shopify.moneyFormat = {{ shop.money_format | json }};</script>
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    {% if settings.enable_cart_drawer %}<script src="{{ 'cart-drawer.js' | asset_url }}" defer></script>{% endif %}
    <script src="{{ 'matrix-rain.js' | asset_url }}" defer></script>

    {% if settings.enable_cart_drawer %}{% section 'cart-drawer' %}{% endif %}
  </body>
</html>

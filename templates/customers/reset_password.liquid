<div class="customer-reset-password" data-template="reset-password">
  <div class="container container--narrow pt-3xl pb-3xl">
    <div class="customer-form-panel">
      <div class="customer-form-header text-center mb-xl">
        <h1 class="glow">{{ 'customer.reset_password.title' | t }}</h1>
        <p class="customer-form-subtext mt-sm">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
      </div>

      {%- form 'reset_customer_password' -%}
        {{ form.errors | default_errors }}

        <div class="form-group">
          <label class="form-label" for="reset-password">{{ 'customer.reset_password.password' | t }}</label>
          <input
            type="password"
            id="reset-password"
            class="form-input"
            name="customer[password]"
            autocomplete="new-password"
            placeholder="New password"
            required
          >
        </div>

        <div class="form-group">
          <label class="form-label" for="reset-password-confirm">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input
            type="password"
            id="reset-password-confirm"
            class="form-input"
            name="customer[password_confirmation]"
            autocomplete="new-password"
            placeholder="Confirm new password"
            required
          >
        </div>

        <div class="customer-form-actions mt-lg">
          <button type="submit" class="btn btn--primary btn--block">
            {{ 'customer.reset_password.submit' | t }}
          </button>
        </div>
      {%- endform -%}

      <div class="customer-form-footer mt-xl text-center">
        <p class="customer-form-alt">
          <a href="{{ routes.account_login_url }}">Back to login</a>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  .customer-form-panel {
    background: var(--color-panel);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: var(--space-2xl);
    max-width: 480px;
    margin: 0 auto;
  }

  .customer-form-header h1 {
    font-size: var(--h2);
  }

  .customer-form-subtext {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .customer-form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .customer-form-footer {
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-lg);
  }

  .customer-form-alt {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .customer-form-alt a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .customer-form-alt a:hover {
    text-shadow: 0 0 5px var(--color-accent-glow);
    text-decoration: underline;
  }
</style>

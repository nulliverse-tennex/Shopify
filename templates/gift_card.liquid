<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" style="background-color: #000">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'gift_cards.issued.title' | t }} â€” {{ shop.name }}</title>

    {{ 'theme.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}

    <style>
      .gift-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: var(--space-xl);
        text-align: center;
        max-width: 540px;
        margin: 0 auto;
      }

      .gift-card__store-name {
        font-family: var(--font-heading);
        font-size: var(--h2);
        color: var(--color-accent);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        text-shadow: 0 0 8px rgba(0, 255, 65, 0.4), 0 0 20px rgba(0, 255, 65, 0.2);
        margin: 0;
      }

      .gift-card__subtitle {
        font-family: var(--font-heading);
        font-size: var(--font-size-xl);
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.06em;
        margin: var(--space-sm) 0 0;
      }

      .gift-card__status {
        display: inline-block;
        padding: var(--space-xs) var(--space-md);
        font-family: var(--font-heading);
        font-size: var(--font-size-sm);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        border-radius: var(--radius);
        margin-top: var(--space-md);
      }

      .gift-card__disabled {
        color: var(--color-error);
        border: 1px solid var(--color-error);
        background: rgba(255, 68, 68, 0.08);
      }

      .gift-card__expired {
        color: var(--color-error);
        border: 1px solid var(--color-error);
        background: rgba(255, 68, 68, 0.08);
      }

      .gift-card__expiry {
        font-size: var(--font-size-sm);
        color: var(--color-text-muted);
        margin-top: var(--space-sm);
      }

      .gift-card__image {
        margin-top: var(--space-xl);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        overflow: hidden;
        background: var(--color-panel);
      }

      .gift-card__image img {
        display: block;
        width: 100%;
        max-width: 400px;
        height: auto;
      }

      .gift-card__balance {
        font-family: var(--font-heading);
        font-size: var(--h1);
        color: var(--color-accent);
        text-shadow: 0 0 8px rgba(0, 255, 65, 0.4), 0 0 20px rgba(0, 255, 65, 0.2);
        margin: var(--space-xl) 0 0;
        letter-spacing: 0.05em;
      }

      .gift-card__code {
        margin-top: var(--space-lg);
        width: 100%;
        max-width: 400px;
      }

      .gift-card__code-input {
        display: block;
        width: 100%;
        padding: var(--space-md);
        font-family: var(--font-body);
        font-size: var(--font-size-lg);
        text-align: center;
        letter-spacing: 0.15em;
        color: var(--color-accent);
        background: var(--color-panel);
        border: 1px solid var(--color-accent);
        border-radius: var(--radius);
        box-shadow: 0 0 5px rgba(0, 255, 65, 0.15), 0 0 10px rgba(0, 255, 65, 0.08);
        outline: none;
      }

      .gift-card__code-input:focus {
        box-shadow: 0 0 5px rgba(0, 255, 65, 0.4), 0 0 15px rgba(0, 255, 65, 0.2);
      }

      .gift-card__qr {
        margin-top: var(--space-xl);
        padding: var(--space-md);
        background: #ffffff;
        border-radius: var(--radius);
        display: inline-block;
      }

      .gift-card__qr img {
        display: block;
      }

      .gift-card__apple-wallet {
        display: inline-block;
        margin-top: var(--space-lg);
      }

      .gift-card__apple-wallet img {
        display: block;
      }

      .gift-card__actions {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
        margin-top: var(--space-xl);
        flex-wrap: wrap;
        justify-content: center;
      }

      .gift-card__shop-link {
        font-family: var(--font-heading);
        font-size: var(--font-size-lg);
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--color-accent);
        text-decoration: none;
        transition: text-shadow 120ms ease;
      }

      .gift-card__shop-link:hover {
        text-shadow: 0 0 5px rgba(0, 255, 65, 0.4);
      }

      .gift-card__print {
        font-family: var(--font-heading);
        font-size: var(--font-size-lg);
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--color-text-muted);
        background: none;
        border: 1px solid var(--color-border);
        border-radius: 2px;
        padding: var(--space-sm) var(--space-lg);
        cursor: pointer;
        transition: border-color 120ms ease, color 120ms ease;
      }

      .gift-card__print:hover {
        border-color: var(--color-accent);
        color: var(--color-accent);
      }

      @media print {
        .gift-card {
          min-height: auto;
          padding: 1rem;
        }

        .gift-card__store-name,
        .gift-card__balance {
          color: #000;
          text-shadow: none;
        }

        .gift-card__code-input {
          color: #000;
          border-color: #000;
          box-shadow: none;
          background: #fff;
        }

        .gift-card__actions {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <div class="gift-card" data-template="gift-card">
      <h1 class="gift-card__store-name">{{ shop.name }}</h1>
      <h2 class="gift-card__subtitle">{{ 'gift_cards.issued.subtext' | t }}</h2>

      {%- unless gift_card.enabled -%}
        <p class="gift-card__status gift-card__disabled">{{ 'gift_cards.issued.disabled' | t }}</p>
      {%- endunless -%}

      {%- if gift_card.expired -%}
        <p class="gift-card__status gift-card__expired">{{ 'gift_cards.issued.expired' | t }}</p>
      {%- endif -%}

      {%- if gift_card.expires_on -%}
        <p class="gift-card__expiry">
          {{ 'gift_cards.issued.expiration_date' | t }}: {{ gift_card.expires_on | date: format: 'abbreviated_date' }}
        </p>
      {%- endif -%}

      {%- if gift_card.image -%}
        <div class="gift-card__image">
          <img
            src="{{ gift_card.image | image_url: width: 570 }}"
            alt=""
            width="570"
            height="{{ 570 | divided_by: gift_card.image.aspect_ratio | ceil }}"
            loading="eager"
          >
        </div>
      {%- endif -%}

      <p class="gift-card__balance">{{ gift_card.balance | money }}</p>

      <div class="gift-card__code">
        <input
          type="text"
          id="gift-card-code"
          class="gift-card__code-input"
          value="{{ gift_card.code | format_code }}"
          aria-label="{{ 'gift_cards.issued.gift_card_code' | t }}"
          readonly
        >
      </div>

      <div class="gift-card__qr" data-identifier="{{ gift_card.qr_identifier }}">
        <img
          src="{{ gift_card.qr_identifier | prepend: 'https://chart.googleapis.com/chart?chs=120x120&cht=qr&chl=' }}"
          alt="{{ 'gift_cards.issued.qr_image_alt' | t }}"
          width="120"
          height="120"
        >
      </div>

      {%- if gift_card.pass_url -%}
        <a href="{{ gift_card.pass_url }}" class="gift-card__apple-wallet">
          <img
            src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
            alt="{{ 'gift_cards.issued.add_to_apple_wallet' | t }}"
            width="120"
            height="40"
            loading="lazy"
          >
        </a>
      {%- endif -%}

      <div class="gift-card__actions">
        <a href="{{ shop.url }}" class="gift-card__shop-link" target="_blank" rel="noopener">
          {{ 'gift_cards.issued.shop_link' | t }}
        </a>

        <button class="gift-card__print" onclick="window.print();">
          {{ 'gift_cards.issued.print' | t }}
        </button>
      </div>
    </div>
  </body>
</html>

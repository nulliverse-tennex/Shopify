{%- if section.settings.end_date != blank -%}
<countdown-timer data-end-date="{{ section.settings.end_date }}" data-section-id="{{ section.id }}">
  <div class="countdown-banner">
    <div class="container">
      <div class="countdown-banner__inner">
        <span class="countdown-banner__label">{{ section.settings.label | default: '> SALE ENDS IN:' }}</span>
        <div class="countdown-banner__timer" data-countdown-display>
          <span data-countdown-days>00</span>d
          <span data-countdown-hours>00</span>h
          <span data-countdown-minutes>00</span>m
          <span data-countdown-seconds>00</span>s
        </div>
      </div>
      <div class="countdown-banner__expired" data-countdown-expired hidden>
        {{ section.settings.expired_message | default: '> SALE ENDED_' }}
      </div>
    </div>
  </div>
</countdown-timer>

<style>
  .countdown-banner {
    background: var(--color-panel);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-sm) 0;
    font-family: var(--font-heading);
    color: var(--color-accent);
  }

  .countdown-banner__inner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .countdown-banner__label {
    font-size: var(--font-size-lg);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .countdown-banner__timer {
    display: flex;
    gap: var(--space-sm);
    font-size: var(--font-size-xl);
    text-shadow: var(--shadow-glow-sm);
  }

  .countdown-banner__timer span {
    display: inline-block;
    min-width: 2ch;
    text-align: center;
  }

  .countdown-banner__expired {
    text-align: center;
    font-size: var(--font-size-lg);
    color: var(--color-error);
    padding: var(--space-sm) 0;
  }

  .countdown-banner__expired[hidden] {
    display: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .countdown-banner__timer {
      text-shadow: none;
    }
  }
</style>
{%- endif -%}

{% schema %}
{
  "name": "Countdown banner",
  "tag": "section",
  "class": "countdown-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "end_date",
      "label": "Countdown end date",
      "default": "",
      "info": "ISO 8601 format, e.g. 2026-03-01T00:00:00Z"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Countdown label",
      "default": "> SALE ENDS IN:",
      "info": "Text to display before the countdown"
    },
    {
      "type": "text",
      "id": "expired_message",
      "label": "Expired message",
      "default": "> SALE ENDED_",
      "info": "Message shown when the countdown has ended"
    }
  ],
  "disabled_on": { "groups": ["footer"] },
  "presets": [{ "name": "Countdown banner", "category": "Banners" }]
}
{% endschema %}
